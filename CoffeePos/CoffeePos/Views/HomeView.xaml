    <Grid>
        <Grid Height="70" VerticalAlignment="Top" Background="#FFFF7800">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <!--<TextBlock Text="POS Cofffee" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>-->
                <!--<StackPanel HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="10">
                <materialDesign:PopupBox  PlacementMode="BottomAndAlignRightEdges" StaysOpen="False"></materialDesign:PopupBox>
            </StackPanel>-->
                <Button HorizontalAlignment="Right" VerticalAlignment="Center" Content="{x:Static language:Lang.Home_Table}" Height="70" Margin="0"
                        cal:Message.Attach="[Event Click] = [Action btOrder_Click()]" Background="#FF079CFF" BorderBrush="{x:Null}" 
                        ></Button>
                <Button HorizontalAlignment="Right" VerticalAlignment="Center" Content="{x:Static language:Lang.Home_Order}" Height="70"
                        cal:Message.Attach="[Event Click] = [Action btOrder_Click()]" Background="#FFFF07F0" BorderBrush="{x:Null}"
                        ></Button>
                <Button HorizontalAlignment="Right" VerticalAlignment="Center" Content="{x:Static language:Lang.Home_Register}" Height="70" Background="#FF07FF28" BorderBrush="{x:Null}"></Button>
            </StackPanel>
        </Grid>
        <Grid Margin="60 70 0 0" Background="#FFF3F3F3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="5 5 0 5" Background="White" Width="702" >
                <Grid VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Rectangle StrokeThickness="1"/>
                        <TextBox x:Name="SearchBox"
                                     Height="50" Width="350" Text="{Binding Text}"
                                     Margin="10" VerticalAlignment="Top"
                                     VerticalContentAlignment="Center"
                                     Padding="5"
                                     Foreground="#CFCFCF"
                                     HorizontalAlignment="Left"
                                     BorderThickness="0">
                        </TextBox>
                        <TextBlock IsHitTestVisible="False"
                                       Text="Search"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10 0 0 0"
                                       FontSize="10"
                                       Foreground="DarkGray"/>
                    </Grid>

                    <Button Grid.Column="1" Height="50" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10">search</Button>
                </Grid>
                <ScrollViewer Margin="0 70" VerticalScrollBarVisibility="Hidden">
                    <StackPanel>
                        <ItemsControl x:Name="ListViewFoods" Margin="5" ItemsSource="{Binding Food}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="5" Height="80" CornerRadius="5" Background="#FFF3F3F3"
                                            >
                                        <!--<Border.Effect>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="1"/>
                                        </Border.Effect>-->
                                        <StackPanel Orientation="Horizontal">
                                            <Border VerticalAlignment="Center" HorizontalAlignment="Left" CornerRadius="5" Margin="5" Width="70" Height="70">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{Binding FoodImage}"/>
                                                </Border.Background>
                                            </Border>
                                            <StackPanel Width="98" Margin="0 5">
                                                <TextBlock Text="{Binding FoodName}" TextWrapping="Wrap" FontWeight="Bold" FontSize="14" Foreground="Black"></TextBlock>
                                                <TextBlock Text="{Binding FoodPrice, StringFormat={}{0:#.###}}" TextWrapping="Wrap" FontSize="14" FontWeight="Bold" Foreground="#FFFCC800"></TextBlock>
                                            </StackPanel>

                                            <Button Background="{StaticResource Blue}"
                                                materialDesign:ButtonAssist.CornerRadius="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5"
                                                    cal:Message.Attach="[Event Click] = [Action btOrderDetail_Click()]"></Button>
                                        </StackPanel>


                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                    </StackPanel>
                </ScrollViewer>
                <!--<Grid  VerticalAlignment="Bottom" Height="70">-->
                <ScrollViewer VerticalAlignment="Bottom" Height="70" ScrollViewer.HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal">
                        <ItemsControl x:Name="ListTypeFoods" Margin="5" ItemsSource="{Binding TypeFood}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Margin="5" Height="50" VerticalAlignment="Center" Content="{Binding TypeName}">

                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
                <!--</Grid>-->
            </Grid>
            <Grid Grid.Column="1" Background="White" Margin="5" HorizontalAlignment="Right">
                <Grid  VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Margin="10" Height="50" Content="{x:Static language:Lang.Home_Locally}"></Button>
                    <Button Grid.Column="1" Margin="10" Height="50" Content="{x:Static language:Lang.Home_Delivery}"></Button>
                </Grid>
                <ScrollViewer Margin="0 70 0 190" VerticalScrollBarVisibility="Hidden" HorizontalAlignment="Center">
                    <StackPanel>
                        <ItemsControl x:Name="ListViewFoodOrder" Margin="0 0 0 5" 
                                      ItemsSource="{Binding FoodOrder}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0 0 0 5"  Width="272" Height="100" CornerRadius="5" Background="#FFF3F3F3">
                                        <!--<Border.Effect>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="1"/>
                                        </Border.Effect>-->
                                        <Grid >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="7*"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>
                                            </Grid.RowDefinitions>

                                            <Border Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" CornerRadius="5" Margin="5" Width="50" Height="50">
                                                <Border.Background>
                                                    <ImageBrush ImageSource="{Binding FoodOrderImage}"/>
                                                </Border.Background>
                                            </Border>
                                            <StackPanel Grid.Column="1" Width="150" Margin="0 5">
                                                <TextBlock Text="{Binding FoodOrderName}" TextWrapping="Wrap" FontWeight="Bold" FontSize="14" Foreground="Black"></TextBlock>
                                                <TextBlock Text="{Binding FoodOrderMore}" TextWrapping="Wrap" FontSize="14" Foreground="Black"></TextBlock>

                                                <TextBlock Text="{Binding FoodOrderPrice, StringFormat={}{0:#.###}}" TextWrapping="Wrap" FontSize="14" FontWeight="Bold" Foreground="#FFFCC800"></TextBlock>
                                            </StackPanel>
                                            <Grid Grid.Column="2">
                                                <TextBlock Foreground="Green" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" FontWeight="Bold" Text="{Binding FoodOrderCount}"></TextBlock>
                                                <Grid VerticalAlignment="Bottom" Margin="5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition></ColumnDefinition>
                                                        <ColumnDefinition></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    <Button Content="Chỉnh sửa" Grid.Column="1" materialDesign:ButtonAssist.CornerRadius="25" Height="25" Width="25" ></Button>
                                                    <Button Grid.Column="0" materialDesign:ButtonAssist.CornerRadius="25" Height="25" Width="25" >
                                                        <DockPanel>
                                                            <Image Source="/Image/clem-onojeghuo-zlABb6Gke24-unsplash.jpg"/>
                                                        </DockPanel>
                                                    </Button>
                                                    <Button Grid.Column="1" materialDesign:ButtonAssist.CornerRadius="25" Height="25" Width="25" ></Button>
                                                </Grid>

                                            </Grid>

                                        </Grid>


                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                    </StackPanel>
                </ScrollViewer>
                <Grid VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="280" Margin="5" Background="#FFF3F3F3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition Height="60"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="10 0">
                            <TextBlock Foreground="Black" Text="{x:Static language:Lang.Home_Food}"></TextBlock>
                            <TextBlock Foreground="Black" HorizontalAlignment="Right">0</TextBlock>
                        </Grid>
                        <Grid Grid.Column="1" Margin="10 0">
                            <TextBlock Foreground="Black" Text="{x:Static language:Lang.Home_Table}"></TextBlock>
                            <TextBlock Foreground="Black" HorizontalAlignment="Right">0</TextBlock>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="1" Margin="10 0" VerticalAlignment="Center">
                        <TextBlock Foreground="Black" Text="{x:Static language:Lang.Home_Price}"></TextBlock>
                        <TextBlock Foreground="Black" HorizontalAlignment="Right">0</TextBlock>
                    </Grid>
                    <Grid Grid.Row="2" Margin="10 0" VerticalAlignment="Center">
                        <TextBlock Foreground="Black" Text="{x:Static language:Lang.Home_Discount}"></TextBlock>
                        <TextBlock Foreground="Black" HorizontalAlignment="Right">0</TextBlock>
                    </Grid>
                    <Grid Grid.Row="3" Margin="10 0" VerticalAlignment="Center">
                        <TextBlock Foreground="Red" FontSize="20" Text="{x:Static language:Lang.Home_Total}"></TextBlock>
                        <TextBlock Foreground="Red" FontSize="20" HorizontalAlignment="Right">0</TextBlock>
                    </Grid>
                    <Button Grid.Row="4" FontSize="20" FontWeight="Bold" Height="50" Margin="5"
                            Content="{x:Static language:Lang.Home_Order}">
                        
                    </Button>
                </Grid>
            </Grid>
        </Grid>
