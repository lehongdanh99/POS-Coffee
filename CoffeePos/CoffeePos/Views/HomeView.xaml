        xmlns:cal="http://www.caliburnproject.org"
        xmlns:language="clr-namespace:CoffeePos.Properties.Langs"
        mc:Ignorable="d"
        Title="Home" Height="790" Width="1090" WindowStartupLocation="CenterScreen" WindowStyle="None" Foreground="White">
