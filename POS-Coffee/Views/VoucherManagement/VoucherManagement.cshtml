@model List<POS_Coffe.Models.VoucherModel>
@{
    ViewBag.Title = "FoodManagement";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="row">
    <div class="column">
        @using (Html.BeginForm("VoucherManagement", "VoucherManagement", FormMethod.Get@*, new { @class = "form-inline" }*@))
{
    <div class="form-check-label">
            
            <input class="form-control input-control-width" type="text" id="StringSearch" name="StringSearch" />
            <button type="submit" class="form-check-input search-btn fa fa-search"></button>
        <button type="button" class="form-check-input btn btn-gradient-success fa fa-plus" value="Add new" onclick="AddNew()"></button>
    </div>

        @*<input type="button" class="btn btn-gradient-success " value="Add new" onclick="AddNew()" />*@
        }
        <div class="card">
            <div class="card-block">
                <table class="styled-table">
                    <thead>
                        <tr>
                            <th>Valid</th>
                            <th>Name</th>
                            <th>Value</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@if(item.isValue == true)
                                    {
                                        <h5>Valid</h5>
                                    }
                                    else
                                    {
                                        <h5 style="color: red">Invalid</h5>
                                    }
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Value</td>
                                <td style="text-align:center">
                                    <button type="button" class="btn btn-primary fa fa-edit" onclick='window.location.href = "@Url.Action("EditVoucher", "VoucherManagement", new {VoucherID = item.VoucherID })"'></button>
                                    <button type="button" onclick="btnConfirm(@Html.DisplayFor(modelItem => item.VoucherID))" class="btn btn-danger fa fa-remove"/>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    </div>

<script>
    function AddNew() {
        console.log()
        window.location.href = "/VoucherManagement/AddVoucher"
    }
    function btnConfirm(VoucherID) {
        if (confirm('Do you want to delete ?')) {
            var url = '@Url.Action("DeleteVoucher", "VoucherManagement")?VoucherID=' + VoucherID;
            window.location.href = url;
        }
    }

</script>


