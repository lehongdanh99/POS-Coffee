@model List<POS_Coffe.Models.StatisticModel>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
<link href="~/Content/Table/Table.css" rel="stylesheet" />


<div class="card">
    <div class="card-block">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Employee</th>
                    <th>Voucher name</th>
                    <th>Table</th>
                    <th>Total Price</th>
                    <th>Discount Price</th>
                    <th>Customer Pay</th>
                    <th>Type Payment</th>
                    <th>Type Service</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    foreach (var data in item.receipts)
                    {
                        <tr>
                            <td></td>
                            <td>@data.customer.Name</td>
                            <td>@data.customer.Phone</td>
                            <td>@data.customer.Point</td>
                            <td>@data.employee.name</td>
                            <td>@data.totalPrice</td>
                            @foreach (var receiptDetails in data.receiptDetails)
                            {
                                <td>@receiptDetails.name</td>
                                <td>@receiptDetails.price</td>
                            }
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
