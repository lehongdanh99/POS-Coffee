@model POS_Coffe.Models.DrinkCakeModel
@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<div class="row">
    <div class="column">
        <div class="card">
            <div class="card-block">
                <div class="site-title"><h4 style="font-weight:bold">@Model.name</h4></div>
                <table>
                    <thead>
                        <tr>
                            <th>Size</th>
                            <th>Price</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.DrinkCakeVariations)
                        {
                            <tr>
                                <td>@item.name</td>
                                <td>@item.price</td>
                                <td>@item.description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
