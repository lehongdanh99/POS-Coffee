@model POS_Coffe.Models.EmployeeModel
@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="box-title">Edit Employee</h3>
        <div class="cover-table">
            @using (Html.BeginForm("EditEmployee", "Employee", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="Name">Name</label>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @required = "required", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="Username">Username</label>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @required = "required", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="Permission">Permission</label>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Permission, new { htmlAttributes = new { @required = "required", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Permission, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="Phone">Phone</label>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @required = "required", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="box-footer col-lg-6 text-center">
                    <input type="button" value="Save" class="btn btn-gradient-success" name="btnSave" id="btnSave" />
                    <a class="btn btn-inverse-dark" href="~/Employee/ViewEmployee">Back<span class="sr-only">(current)</span></a>
                </div>
            }
        </div>
    </div>
</div>

